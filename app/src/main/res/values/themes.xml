<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Reminder" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/primary</item>
        <item name="colorSecondaryVariant">@color/secondary</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/statusBar</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="EditTextTheme" parent="Widget.AppCompat.EditText">
        <item name="android:textColor">@color/reminderActivatedText</item>
        <item name="android:textColorHint">@color/reminderInactivatedText</item>

        <item name="colorControlNormal">@color/reminderInactivatedText</item>
        <item name="colorControlActivated">@color/reminderActivatedText</item>
    </style>

    <style name="TimePickerTheme" parent="Widget.Material3.MaterialTimePicker">
        <item name="android:textColorPrimary">@color/reminderActivatedText</item>
        <item name="android:textColor">@color/reminderActivatedText</item> <!-- : 색상 -->
        <item name="colorControlNormal">@color/reminderInactivatedText</item> <!-- divider 색상 -->


        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>